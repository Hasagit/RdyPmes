<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruiduoyi.activity.SbdjActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue_sl_false">

        <Button
            android:id="@+id/cancle_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:background="@drawable/cmdclose_sl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="设备点检"
            android:textColor="@android:color/white"
            android:textSize="30dp" />
    </FrameLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio_jt"
                    android:checked="true"
                    android:text="机台设备"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"/>
                <RadioButton
                    android:id="@+id/radio_gy"
                    android:text="共用设备"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"/>
            </RadioGroup>
            <LinearLayout
            android:background="@color/blue_sl_false"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="设备编号"
                android:background="@drawable/text_bg"
                android:gravity="center"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="设备名称"
                android:background="@drawable/text_bg"
                android:gravity="center"/>
        </LinearLayout>
            <ListView
                android:background="@drawable/text_bg"
                android:id="@+id/list_1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:divider="@color/touming"></ListView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="未完成点检内容"
                android:textSize="20dp"/>
            <LinearLayout
                android:background="@color/blue_sl_false"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="点检日期"
                    android:background="@drawable/text_bg"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="点检设备"
                    android:background="@drawable/text_bg"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="点检类别描述"
                    android:background="@drawable/text_bg"
                    android:gravity="center"/>
            </LinearLayout>
            <ListView
                android:background="@drawable/text_bg"
                android:id="@+id/list_unfinish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/touming"></ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="点检类别"
                    android:textSize="18dp"/>
                <Button
                    android:id="@+id/spinner_btn"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="410dp"
                    android:layout_height="50dp"
                    android:background="@drawable/spnner_bg"/>
                <Button
                    android:textSize="20dp"
                    android:id="@+id/add_btn"
                    android:layout_marginLeft="15dp"
                    android:layout_width="150dp"
                    android:text="新增"
                    android:layout_height="match_parent" />
                <Button
                    android:textSize="20dp"
                    android:id="@+id/save_btn"
                    android:layout_marginLeft="15dp"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="保存"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="点检编号"
                    android:layout_gravity="center"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/djbh"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/text_bg"
                    />
                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="设备编号"
                    android:layout_gravity="center"/>

                <TextView
                    android:gravity="center"
                    android:id="@+id/sbbh"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/text_bg" />

                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="设备名称"
                    android:layout_gravity="center"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/sbmc"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/text_bg"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/blue_sl_false"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:text="点检类别"
                    android:background="@drawable/text_bg"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:text="点检内容"
                    android:background="@drawable/text_bg"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:text="点检要求"
                    android:background="@drawable/text_bg"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:text="点检结果"
                    android:background="@drawable/text_bg"
                    android:gravity="center"/>
            </LinearLayout>

            <ListView
                android:id="@+id/list_2"
                android:layout_width="840dp"
                android:layout_height="match_parent"
                android:divider="@color/touming"
                android:background="@drawable/text_bg"></ListView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/blue_sl_false"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"></LinearLayout>
</LinearLayout>
