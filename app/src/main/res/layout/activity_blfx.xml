<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruiduoyi.activity.BlfxActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue_sl_false">

        <Button
            android:id="@+id/cancle_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:background="@drawable/cmdclose_sl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="不良分析"
            android:textColor="@android:color/white"
            android:textSize="30dp" />
    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="产品选取"
                android:textColor="@android:color/black" />

            <Button
                android:background="@drawable/spnner_bg"
                android:id="@+id/blcp_spinner"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="15dp"
                android:gravity="center_vertical|left"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="制造单号"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/lab_2"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="模具编号"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/lab_3"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="计划数量"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/lab_4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="良品数量"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/lab_5"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="生产不良"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/lab_6"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="物料代码"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/lab_7"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="品名规格"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/lab_8"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textColor="@android:color/black" />
        </TableRow>

    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue_sl_false"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="480dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/blue_sl_false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="不良代码"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="不良描述"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <ListView
                android:id="@+id/list_b8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:choiceMode="singleChoice"></ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/text_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">



            <!--更改的地方-->

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="不良代码"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/bldm_text"
                    android:layout_width="290dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="不良描述"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/blms_text"
                    android:layout_width="290dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/lable"
                android:gravity="right|center_vertical">
                <TextView
                    android:id="@+id/sub_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/lable"
                    android:gravity="right|center_vertical"
                    android:text="0"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_1"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:text="1"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_2"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:text="2"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_3"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:text="3"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_4"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:text="4"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_5"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:text="5"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_6"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:text="6"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_7"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:text="7"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_8"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:text="8"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_9"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:text="9"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_0"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:text="0"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_del"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:text="-"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_clear"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:text="清除"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_submit"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:text="提交"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/blue_sl_false"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/text_bg"
                            android:gravity="center"
                            android:text="不良代码"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/text_bg"
                            android:gravity="center"
                            android:text="不良描述"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/text_bg"
                            android:gravity="center"
                            android:text="数量"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/text_bg"
                            android:gravity="center"
                            android:text="提报时间"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/list_b8_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@color/touming"></ListView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/blue_sl_false"></LinearLayout>
</LinearLayout>
