<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:background="@drawable/text_bg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <Button
                android:id="@+id/fh_btn"
                android:text="复核"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/lab_1"
            android:background="@drawable/text_bg"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="机台编号"/>
        <TextView
            android:id="@+id/lab_2"
            android:background="@drawable/text_bg"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="MES单号"/>
        <TextView
            android:id="@+id/lab_3"
            android:background="@drawable/text_bg"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="工单单号"/>
        <TextView
            android:id="@+id/lab_4"
            android:background="@drawable/text_bg"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="生产批号"/>
        <TextView
            android:id="@+id/lab_5"
            android:background="@drawable/text_bg"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="产品编号"/>
        <TextView
            android:id="@+id/lab_6"
            android:background="@drawable/text_bg"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="品名规格"/>
        <TextView
            android:id="@+id/lab_7"
            android:background="@drawable/text_bg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="模具编号"/>
        <TextView
            android:id="@+id/lab_8"
            android:background="@drawable/text_bg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="模具名称"/>
        <TextView
            android:id="@+id/lab_9"
            android:background="@drawable/text_bg"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="产品腔数"/>
        <TextView
            android:id="@+id/lab_10"
            android:background="@drawable/text_bg"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="实际腔数"/>
        <TextView
            android:id="@+id/lab_11"
            android:background="@drawable/text_bg"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="堵头数量"/>
        <TextView
            android:id="@+id/lab_12"
            android:background="@drawable/text_bg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="更改人员"/>
        <TextView
            android:id="@+id/lab_13"
            android:background="@drawable/text_bg"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="更改时间"/>

    </LinearLayout>
</LinearLayout>