<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruiduoyi.Fragment.DtxxFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/text_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="7dp"
                        android:text="模具编号"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/mjbh_text"
                        android:layout_width="300dp"
                        android:layout_height="36dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/text_bg"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size" />
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="7dp"
                        android:text="模具名称"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/mjmc_text"
                        android:layout_width="300dp"
                        android:layout_height="36dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/text_bg"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="7dp"
                        android:text="产品腔数"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/mjxs_text"
                        android:layout_width="110dp"
                        android:layout_height="36dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/text_bg"
                        android:gravity="center_vertical|right"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="7dp"
                        android:text="实际腔数"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:id="@+id/qs_bg"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@drawable/text_bg">

                            <TextView
                                android:id="@+id/cpxs_text"
                                android:layout_width="110dp"
                                android:layout_height="36dp"
                                android:background="@null"
                                android:gravity="center_vertical|right"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="7dp"
                        android:text="品名规格"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/pmgg_text"
                        android:layout_width="300dp"
                        android:layout_height="36dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/text_bg"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="792dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="792dp"
                android:layout_height="35dp"
                android:background="@color/blue_sl_false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="序号"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="堵头位置"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="堵头原因"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="建立人员"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="116dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="建立日期"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="修复人员"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="116dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="修复日期"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <ListView
                android:id="@+id/list_2"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/touming"></ListView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
