<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruiduoyi.activity.SlcsActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#99ccff"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/cmdclose_sl"
            android:id="@+id/cancle_btn"
            android:layout_gravity="center_vertical|right"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:text="上料参数"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="MES单号" />

                <TextView
                    android:id="@+id/zzdh"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="产品编号" />

                <TextView
                    android:id="@+id/cpbh"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="模具编号" />

                <TextView
                    android:id="@+id/mjbh"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="模具名称" />

                <TextView
                    android:id="@+id/mjmc"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="模具腔数" />

                <TextView
                    android:id="@+id/mjqs"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="实际腔数" />

                <TextView
                    android:id="@+id/sjqs"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="品名规格" />

                <TextView
                    android:id="@+id/pmgg"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="斗1百分比设定(%)" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg">

                    <TextView
                        android:text="0"
                        android:id="@+id/d1bfbsd"
                        android:layout_width="155dp"
                        android:layout_height="35dp"
                        android:background="@color/small"
                        android:gravity="center|right" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="每模盖和料柄重(g)" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg">

                    <TextView
                        android:text="0"
                        android:id="@+id/mmghlbz"
                        android:layout_width="160dp"
                        android:layout_height="35dp"
                        android:gravity="center|right" />
                </LinearLayout>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="50S测色母实际输出量(g)" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg">

                    <TextView
                        android:text="0"
                        android:id="@+id/csmsjscl"
                        android:layout_width="155dp"
                        android:layout_height="35dp"
                        android:gravity="center|right" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="每模色母重量(g)" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg">

                    <TextView
                        android:text="0"
                        android:id="@+id/mmsmzl"
                        android:layout_width="160dp"
                        android:layout_height="35dp"
                        android:gravity="center|right" />
                </LinearLayout>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="色母粒批号" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg">

                    <TextView
                        android:id="@+id/smlph"
                        android:layout_width="155dp"
                        android:layout_height="35dp"
                        android:gravity="center|right" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_1"
                            android:layout_width="@dimen/slcs_num_width"
                            android:layout_height="@dimen/slcs_num_height"
                            android:layout_margin="2dp"
                            android:text="1"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_2"
                            android:layout_width="@dimen/slcs_num_width"
                            android:layout_height="@dimen/slcs_num_height"
                            android:layout_margin="2dp"
                            android:text="2"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_3"
                            android:layout_width="@dimen/slcs_num_width"
                            android:layout_height="@dimen/slcs_num_height"
                            android:layout_margin="2dp"
                            android:text="3"
                            android:textSize="20dp" />
                        <Button
                            android:id="@+id/btn_0"
                            android:layout_width="@dimen/slcs_num_width"
                            android:layout_height="@dimen/slcs_num_height"
                            android:layout_margin="2dp"
                            android:text="0"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_4"
                            android:layout_width="@dimen/slcs_num_width"
                            android:layout_height="@dimen/slcs_num_height"
                            android:layout_margin="2dp"
                            android:text="4"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_5"
                            android:layout_width="@dimen/slcs_num_width"
                            android:layout_height="@dimen/slcs_num_height"
                            android:layout_margin="2dp"
                            android:text="5"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_6"
                            android:layout_width="@dimen/slcs_num_width"
                            android:layout_height="@dimen/slcs_num_height"
                            android:layout_margin="2dp"
                            android:text="6"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_del"
                            android:layout_width="@dimen/slcs_num_width"
                            android:layout_height="@dimen/slcs_num_height"
                            android:layout_margin="2dp"
                            android:text="."
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_7"
                            android:layout_width="@dimen/slcs_num_width"
                            android:layout_height="@dimen/slcs_num_height"
                            android:layout_margin="2dp"
                            android:text="7"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_8"
                            android:layout_width="@dimen/slcs_num_width"
                            android:layout_height="@dimen/slcs_num_height"
                            android:layout_margin="2dp"
                            android:text="8"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_9"
                            android:layout_width="@dimen/slcs_num_width"
                            android:layout_height="@dimen/slcs_num_height"
                            android:layout_margin="2dp"
                            android:text="9"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_clear"
                            android:layout_width="@dimen/slcs_num_width"
                            android:layout_height="@dimen/slcs_num_height"
                            android:layout_margin="2dp"
                            android:text="清除"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_submit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:text="提交"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@color/blue_sl_false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="实际使用腔数" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="斗一设定百分比(%)" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="每模盖和料柄重(g)" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:singleLine="false"

                    android:text="50S测色母实际输出量(g)" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="每模色母重量(g)" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="色母粒批号" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="建立人员" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="建立日期" />
            </LinearLayout>

            <ListView
                android:layout_gravity="center_horizontal"
                android:id="@+id/list_1"
                android:layout_width="750dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_bg"
                android:divider="@color/touming"></ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/blue_sl_false"></LinearLayout>
</LinearLayout>
