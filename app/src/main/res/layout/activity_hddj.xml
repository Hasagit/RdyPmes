<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruiduoyi.activity.HddjActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue_sl_false">

        <Button
            android:id="@+id/cancle_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:background="@drawable/cmdclose_sl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="耗电登记"
            android:textColor="@android:color/white"
            android:textSize="30dp" />
    </FrameLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="335dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/blue_sl_false"
                android:layout_gravity="center_horizontal"
                android:layout_width="1518dp"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:layout_width="128dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:layout_width="@dimen/b3_lable"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="生产日期"/>
                <TextView
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="序号"/>
                <TextView
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="MES单号"/>
                <TextView
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="工单单号"/>
                <TextView
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="生产批号"/>
                <TextView
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:layout_width="@dimen/b3_lable"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="产品编号"/>
                <TextView
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:layout_width="196dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="品名规格"/>
                <TextView
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:layout_width="@dimen/b3_lable"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="完工日期"/>
                <TextView
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:layout_width="@dimen/b3_lable"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="计划数量"/>
                <TextView
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:layout_width="@dimen/b3_lable"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="良品数量"/>
                <TextView
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:layout_width="@dimen/b3_lable"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="模具编号"/>
                <TextView
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:layout_width="196dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:text="模具名称"/>
            </LinearLayout>
            <ListView
                android:layout_gravity="center_horizontal"
                android:layout_width="1518dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:id="@+id/list_1"
                android:divider="@color/touming"></ListView>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:background="@color/blue_sl_false"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="MES单号"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/zzdh"
                    android:layout_width="@dimen/hddj_width"
                    android:layout_height="@dimen/hddj_height"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="工单单号"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/gddh"
                    android:layout_width="@dimen/hddj_width"
                    android:layout_height="@dimen/hddj_height"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="35dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="生产批号"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/scph"
                    android:layout_width="@dimen/hddj_width"
                    android:layout_height="@dimen/hddj_height"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="产品编号"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/cpbh"
                    android:layout_width="@dimen/hddj_width"
                    android:layout_height="@dimen/hddj_height"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="35dp">
                <TextView
                    android:layout_width="61dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="品名规格"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/pmgg"
                    android:layout_width="@dimen/hddj_width"
                    android:layout_height="@dimen/hddj_height"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="计划数量"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/jhsl"
                    android:layout_width="@dimen/hddj_width"
                    android:layout_height="@dimen/hddj_height"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="35dp">
                <TextView
                    android:layout_width="61dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="开始度数"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg">
                    <TextView
                        android:id="@+id/ksds"
                        android:layout_width="@dimen/hddj_width"
                        android:layout_height="@dimen/hddj_height"
                        android:background="@color/small"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black" />
                </LinearLayout>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="结束度数"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg">
                    <TextView
                        android:id="@+id/jsds"
                        android:layout_width="130dp"
                        android:layout_height="@dimen/hddj_height"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="@dimen/hdnum_width"
                    android:layout_height="@dimen/hdnum_height"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="1"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="@dimen/hdnum_width"
                    android:layout_height="@dimen/hdnum_height"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="2"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="@dimen/hdnum_width"
                    android:layout_height="@dimen/hdnum_height"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="3"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="@dimen/hdnum_width"
                    android:layout_height="@dimen/hdnum_height"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="4"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="@dimen/hdnum_width"
                    android:layout_height="@dimen/hdnum_height"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="5"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="@dimen/hdnum_width"
                    android:layout_height="@dimen/hdnum_height"
                    android:layout_margin="5dp"
                    android:text="6"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="@dimen/hdnum_width"
                    android:layout_height="@dimen/hdnum_height"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="7"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="@dimen/hdnum_width"
                    android:layout_height="@dimen/hdnum_height"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="8"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="@dimen/hdnum_width"
                    android:layout_height="@dimen/hdnum_height"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="9"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="@dimen/hdnum_width"
                    android:layout_height="@dimen/hdnum_height"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="0"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="@dimen/hdnum_width"
                    android:layout_height="@dimen/hdnum_height"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="清除"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="@dimen/hdnum_width"
                    android:layout_height="@dimen/hdnum_height"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:text="提交"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp">
            <LinearLayout
                android:layout_width="570dp"
                android:layout_height="35dp"
                android:background="@color/blue_sl_false"
                android:orientation="horizontal">

                <TextView
                    android:textSize="@dimen/mjxx_text_size"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="机台编号"
                    android:textColor="@android:color/black" />

                <TextView
                    android:textSize="@dimen/mjxx_text_size"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="起始度数"
                    android:textColor="@android:color/black" />

                <TextView
                    android:textSize="@dimen/mjxx_text_size"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="终止度数"
                    android:textColor="@android:color/black" />
                <TextView
                    android:textSize="@dimen/mjxx_text_size"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="耗电度数"
                    android:textColor="@android:color/black" />
                <TextView
                    android:textSize="@dimen/mjxx_text_size"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="建立人员"
                    android:textColor="@android:color/black" />
                <TextView
                    android:textSize="@dimen/mjxx_text_size"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="建立日期"
                    android:textColor="@android:color/black" />
                <TextView
                    android:textSize="@dimen/mjxx_text_size"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/black" />
            </LinearLayout>
            <ListView
                android:divider="@color/touming"
                android:background="@drawable/text_bg"
                android:layout_width="570dp"
                android:layout_height="match_parent"
                android:id="@+id/list_2"></ListView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/blue_sl_false"></LinearLayout>
</LinearLayout>
