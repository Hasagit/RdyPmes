<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruiduoyi.activity.QsfhActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue_sl_false">

        <Button
            android:id="@+id/cancle_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:background="@drawable/cmdclose_sl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="腔数复核"
            android:textColor="@android:color/white"
            android:textSize="30dp" />
    </FrameLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/blue_sl_false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="机台编号" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="MES单号" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="工单单号" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="产品批号" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="产品编号" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="品名规格" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="模具编号" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="模具名称" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="产品腔数" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="实际腔数" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="堵头数量" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="更改人员" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="更改时间" />

            </LinearLayout>

            <ListView
                android:id="@+id/list_1"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:background="@drawable/text_bg"
                android:divider="@color/touming"></ListView>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/blue_sl_false"></LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/blue_sl_false"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="堵头位置"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="堵头原因"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="修复"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="堵头人员"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="堵头时间"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="修复人员"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="修复时间"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="复核人员"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="复核时间"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="复核次数"/>
        </LinearLayout>

        <ListView
            android:layout_marginBottom="10dp"
            android:id="@+id/list_2"
            android:layout_width="1250dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_bg"
            android:divider="@color/touming"></ListView>
    </LinearLayout>
</LinearLayout>
