<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruiduoyi.activity.PgxjActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#99ccff">

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|right">
            <Button
                android:id="@+id/save_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/save_sl" />
            <Button
                android:id="@+id/cancle_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="20dp"
                android:background="@drawable/cmdclose_sl" />
        </LinearLayout>

        <TextView
            android:text="品管巡机"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/title"
            android:textColor="@android:color/white"
            android:textSize="30dp" />
    </FrameLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:text="制造单号"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dq_1"
                    android:layout_width="@dimen/blyyfx_text_width"
                    android:layout_height="36dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:text="工单单号"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dq_2"
                    android:layout_width="@dimen/blyyfx_text_width"
                    android:layout_height="36dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:text="生产批号"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dq_3"
                    android:layout_width="@dimen/blyyfx_text_width"
                    android:layout_height="36dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:text="完工日期"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dq_4"
                    android:layout_width="@dimen/blyyfx_text_width"
                    android:layout_height="36dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:text="产品编号"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dq_5"
                    android:layout_width="@dimen/blyyfx_text_width"
                    android:layout_height="36dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:text="品名规格"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dq_6"
                    android:layout_width="@dimen/blyyfx_text_width"
                    android:layout_height="36dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:text="计划数量"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dq_7"
                    android:layout_width="@dimen/blyyfx_text_width"
                    android:layout_height="36dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:text="良品数量"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dq_8"
                    android:layout_width="@dimen/blyyfx_text_width"
                    android:layout_height="36dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:text="模具编号"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dq_9"
                    android:layout_width="@dimen/blyyfx_text_width"
                    android:layout_height="36dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:text="模具名称"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dq_10"
                    android:layout_width="@dimen/blyyfx_text_width"
                    android:layout_height="36dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:text="产品穴数"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dq_11"
                    android:layout_width="@dimen/blyyfx_text_width"
                    android:layout_height="36dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:text="实际穴数"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dq_12"
                    android:layout_width="@dimen/blyyfx_text_width"
                    android:layout_height="36dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/text_bg"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layout_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="860dp"
                android:layout_height="35dp"
                android:background="@color/blue_sl_false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="物料代码"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="品名规格"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="标准净重(g)"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="实际净重(g)"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="标准水口(g)"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="实际水口(g)"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="实际腔数"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="巡查腔数"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <ListView
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/list_2"
                android:layout_width="860dp"
                android:layout_height="match_parent"
                android:divider="@color/touming"></ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="判定结果:"
                    android:textSize="25dp" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/text_bg"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/ok_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="OK"
                        android:textSize="25dp" />

                    <RadioButton
                        android:id="@+id/ng_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="NG"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="25dp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue_sl_false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="原因代码"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="原因描述"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="选取"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <ListView
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:id="@+id/list_3"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:choiceMode="singleChoice"
                android:divider="@color/touming"></ListView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
